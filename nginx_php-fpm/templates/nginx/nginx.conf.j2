user  {{ nginx_user | default('nobody') }};
worker_processes  1;

error_log  {{ nginx_log_path | default ('/var/log/nginx') }}/error.log;
error_log  {{ nginx_log_path | default ('/var/log/nginx') }}/error.log  notice;
error_log  {{ nginx_log_path | default ('/var/log/nginx') }}/error.log  info;

#pid        logs/nginx.pid;


events {
    worker_connections  {{ nginx_worker_connections | default('1024') }};
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  {{ nginx_log_path | default ('/var/log/nginx') }}/access.log  main;

    sendfile        on;
    #tcp_nopush     on;

    #keepalive_timeout  0;
    keepalive_timeout  65;

    #gzip  on;

    server {
        listen       80;
        server_name  localhost;

        #charset koi8-r;

        #access_log  {{ nginx_log_path | default ('/var/log/nginx') }}/host.access.log  main;

        location / {
            root   {{ nginx_root_location | default('/var/www/nginx') }}/html;
            index  index.html index.htm;
        }

        #error_page  404              /404.html;

        # redirect server error pages to the static page /50x.html
        #
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
            root   html;
        }

        # proxy the PHP scripts to Apache listening on 127.0.0.1:80
        #
        #location ~ \.php$ {
        #    proxy_pass   http://127.0.0.1;
        #}

        # pass the PHP scripts to FastCGI server listening on 127.0.0.1:9000
        #

        location ~ \.php$ {
            root           {{ nginx_root_location | default('/var/www/nginx') }}/html;
            fastcgi_pass   127.0.0.1:9000;
            fastcgi_index  index.php;
            fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
            include        fastcgi_params;
        }

        # deny access to .htaccess files, if Apache's document root
        # concurs with nginx's one
        #
        location ~ /\.ht {
            deny  all;
        }
    }

    include conf.d/*.conf;
}
